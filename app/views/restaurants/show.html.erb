<div class="container showRestaurant">
  <div class="row restaurantTitle">

    <div class="col s6">
      <%= image_tag @resto.photo_url, class: "restophoto", style:"height:150px;width:150px;border:2px solid black;border-radius:15px;"%>
      <h3 class="orange-text"><%= @resto.name %></h3>
      <p class="bold">
        <i class="material-icons icons">phone</i>
        <%= @resto.phone_number %>
      </p>
      <p class="bold"><i class="material-icons icons">business</i><%= @resto.address %></p>
    </div>

    <div class="col s6 ">
      <iframe
         width="450"
         height="319"
         style="border-radius: 15px;"
         frameborder="0"
         src="https://www.google.com/maps/embed/v1/place?key=AIzaSyDdncbhJJHEPEwp_avrLpzJlPYdzWNG6m0
           &q=<%= @name %>,<%= @address %>" allowfullscreen>
      </iframe>
    </div>

  </div>

  <div class="row">
    <div class="valign-wrapper col s12">
      <p style="text-align:justify"><%= @resto.description %></p>
    </div>
  </div>

  <div class="row restaurantTitle">
    <h3 class="orange-text">Top Dishes</h3>
  </div>
  <div class="row center">
    <% @menu.each do |item| %>
    <%= link_to dish_path(item.id) do %>
    <div class="col s2.5 ">
      <div>
        <%= image_tag item.photourl, style:"height: 150px; width: 150px;border-radius:15px;" %>
        <p class="title center-align black-text bold"><%= item.name %></p>
        <p class="title center-align black-text bold">$<%= item.price %>0</p>
      </div>
      <% end %>
    </div>
    <% end %>
  </div>
</div>
