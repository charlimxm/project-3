<div class="container">
  <% if !@user.owner %>
  PAGE DOES NOT EXIST
  <% end %>
  <% if @user.owner %>
  <h1>Restaurant Details</h1>
    <h3><i class="material-icons">business</i><%= @resto.name %></h3>
    <h3><i class="material-icons">home</i><%= @resto.address %></h3>

    <div class="row">
    <div class="col s12">
      <ul class="tabs center">
        <li class="tab col s4"><a href="#allDishes">Dishes</a></li>
        <li class="tab col s4"><a href="#modifyDishes">Modify Dish Settings</a></li>
        <li class="tab col s4"><a href="#tbd">TBD</a></li>
      </ul>
    </div>
    <div id="allDishes" class="col s12">
      <ul class="collapsible" data-collapsible="accordion">

        <% @dishes.each do |dish| %>
        <li>
          <div class="collapsible-header">
            <i class="material-icons">local_dining</i><%= dish.name %> (Click to Edit)
          </div>
          <div class="collapsible-body">

                <%= form_for dish, :url => dish_path(dish.id), method: :put do |f| %>
                <%= f.label :Name, class: "brown-text text-darken-4"  %>
                <%= f.text_field :name %>
                <%= f.label :Price, class: "brown-text text-darken-4"  %>
                <%= f.text_field :price %>
                <%= f.label :Discount, value: "Discount(%)", class: "brown-text text-darken-4"  %>
                <%= f.text_field :discount %>
                <%= f.label :Image, class: "brown-text text-darken-4" %><br>
                <input
                  type="hidden"
                  role="uploadcare-uploader"
                  name="dish[photourl]"
                  data-public-key="62b4ad6715b6c5f8bf25"
                  data-tabs="file camera url facebook gdrive gphotos dropbox instagram evernote flickr skydrive"
                  data-image-shrink=""
                  data-images-only="true"
                  data-preview-step="false"
                  data-clearable="true"
                  data-multiple="false"
                  data-system-dialog="false"
                  data-crop="400:300"
                  value="<%= dish.photourl %>"
                />
                <%= f.submit "Update", class: 'btn waves-effect waves-light right formbttn' %>
                  <% end %>
                  <br>
                  <div class="">
                    <%= form_for dish, :url => dish_path(dish.id), method: :delete do |f| %>
                    <%= f.submit "Delete Dish", class: 'btn red waves-effect waves-light formbttn' %>
                    <% end %>
                  </div>

        </li>
        <% end %>
      </ul>

    </div>
    <div id="modifyDishes" class="col s12">
      <h4>Delete Dishes</h4>
        <table>
          <thead>
            <tr>
                <th>Dish Name</th>
                <th>Dish Price</th>
                <th>Dish Discount</th>
            </tr>
          </thead>
        <%= form_tag test_params_path, data: {confirm: "Are you sure you want to delete these dishes? This action cannot be reversed"}, remote:true do %>

      <% @dishes.each do |dish| %>
      <tr>
      <td>
          <%= check_box_tag "dishes[]"+dish.name, dish.id, class: "deleteCheckBox"%>
          <%= label_tag "dishes[]"+dish.name, dish.name %>
        </td>
        <td>$<%= dish.price %>0</td>
        <td><%= dish.discount %> %</td>
      </tr>
          <% end %>
          <%= submit_tag "Delete Selected", class: "btn"  %>
      <% end %>
    </table>
    </div>
    <div id="tbd" class="col s12">Test 3</div>
  </div>


<% end %>
</div>
