<div class="container">


<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>


  <div class="field">
    <%= image_tag current_user.photourl, height: "400px" %><br>
  <input
    type="hidden"
    role="uploadcare-uploader"
    name="user[photourl]"
    data-public-key="62b4ad6715b6c5f8bf25"
    data-tabs="file camera url facebook gdrive gphotos dropbox instagram evernote flickr skydrive"
    data-image-shrink=""
    data-images-only="true"
    data-preview-step="false"
    data-clearable="true"
    data-multiple="false"
    data-system-dialog="false"
    data-crop="250:300"
/>
</div><br>

  <div class="field">
    <i class="material-icons prefix">assignment_ind</i>
    <%= f.label :owner %><br />
    <%= f.text_field :owner, autofocus: true %>
  </div>

  <div class="field">
    <i class="material-icons prefix">assignment_ind</i>
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="field">
    <i class="material-icons prefix">email</i>
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <i class="material-icons prefix">enhanced_encryption</i>
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "off" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <i class="material-icons prefix">enhanced_encryption</i>
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <i class="material-icons prefix">enhanced_encryption</i>
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Update", class: 'btn waves-effect waves-light right formbttn' %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), class: 'btn waves-effect waves-light formbttn', data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back , class: 'btn waves-effect waves-light formbttn'%>
</div>
