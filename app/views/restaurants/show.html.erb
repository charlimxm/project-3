<div class="container showRestaurant">
  <div class="row restaurantTitle">
    <div class="col s6">
      <%= image_tag @resto.photo_url, class: "restophoto circle"%>
      <h2><%= @resto.name %></h2>
      <p class="bold"><%= @resto.phone_number %></p>
      <p class="bold"><%= @resto.address %></p>
    </div>
    <div class="col s6">
      <iframe
         width="400"
         height="300"
         style="border-radius: 15px;"
         frameborder="0" style="border:0"
         src="https://www.google.com/maps/embed/v1/place?key=AIzaSyDdncbhJJHEPEwp_avrLpzJlPYdzWNG6m0
           &q=<%= @name %>,<%= @address %>" allowfullscreen>
      </iframe>
    </div>
  </div>

  <div class="row">
    <div class="valign-wrapper col s12">
      <p><%= @resto.description %></p>
    </div>
  </div>

  <div class="row">
    <h3 class="restaurantTitle">Menu Items</h3>
    <ul class="collection">
    <% if @menu %>
    <% @menu.each do |item| %>

      <li class="collection-item avatar">
        <%= image_tag item.photourl, class:"circle" %>
        <span class="title"><%= item.name %></span>
        <p><%= item.price %> <br>
          ITEM DESCRIPTION
        </p>
        <%= link_to dish_path(item.id), class:"secondary-content" do %>
        View Dish
        <i class="material-icons">home</i>
        <% end %>
       </li>
    <% end %>
    <% end %>
    </ul>
  </div>
</div>
