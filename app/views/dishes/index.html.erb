<div class="container">
  <h1>Dishes</h1>
    <div class="row">
  <% @dishes.each do |dish|%>


              <div class="col s4 center-align">
                <div class="card blue-grey darken-1">
                  <div class="card-content white-text">
                    <span class="card-title"><%= dish.name %></span>
                    <%= image_tag dish.photourl, height: "200" %>
                    <p>DISH DESCRIPTION GOES HERE</p>
                  </div>
                  <div class="card-action">
                    <%= link_to "View Full Dish Page", dish_path(dish.id) %>
                    <a href="#">This is a link</a>
                  </div>
                </div>
              </div>



  <% end %>

  </div>
</div>
