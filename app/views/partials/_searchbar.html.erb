<div class=" container searchBar center">

  <div class="row">
    <div class="col s12">
      <ul class="tabs tabs-fixed-width">
        <li class="tab col s2"><a class="active"href="#test1"><h5>Search By Dish</h5></a></li>
        <li class="tab col s2"><a href="#test2"><h5>Search By Restaurant</h5></a></li>
      </ul>
    </div>
    <div class="col s12">
      </br>
    </div>
    <div id="test1" class="col s12">
      <div class="searchInput">
        <h3>Dish Name</h3>
        <%= form_tag ratings_search_path, method: :put, remote:true do %>
          <%= text_field_tag :term,"", autofocus: true, class:"searchBarBorder" %>
        <% end %>
      </div>
    </div>
    <div  id="test2" class="col s12">
      <div class="searchInput">
        <h3>Restaurant Name</h3>
        <%= form_tag restaurants_search_path, method: :put, remote:true do %>
          <%= text_field_tag :term, "", class:"searchBarBorder" %>
        <% end %>
      </div>
    </div>
  </div>

</div>
